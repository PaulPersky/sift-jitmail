@import "@redsift/ui-rs-hero/dist/css/ui-rs-hero.min.css"
@import "@redsift/ui-rs-core/dist/css/ui-rs-core.min.css"
@import "tingle.js/dist/tingle.min.css"
@import "core"

.-bg-jitmail
    background-color: rgb(42, 24, 22)
    background-image: url("../../assets/hero.jpg")
    background-image: -webkit-image-set(
        url('../../assets/hero.jpg') 1x,
        url('../../assets/hero-2x.jpg') 2x
    )

.hero-sticky-header--active
    box-shadow: 0px 0px 2px 2px rgba(0, 0, 0, 0.15)
    background-image: url("../../assets/hero.jpg")
    background-image: -webkit-image-set(
        url('../../assets/hero.jpg') 1x,
        url('../../assets/hero-2x.jpg') 2x
    )

.calendar
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  width: 100%

.calendar__section
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  width: 100%
  height: 50%
  min-height: 230px
  box-sizing: border-box
  border-bottom: 1px solid #f7f7f7
  padding: 16px

.cs--last
  border-bottom: none

.calendar__row--centered
  width: 100%
  display: flex
  align-items: center
  justify-content: center

.calendar__title
  padding-left: 16px
  display: flex
  flex-direction: row
  color: #fcbb54
  margin-bottom: 10px

.calendar__name
  color: #fcbb54
  font-size: 24px
  text-decoration: none
  margin: 0px

.goto__button
  background-color: white
  color: #7F7F7F
  font-size: 16px
  border: 1px solid #7F7F7F
  margin-left: 20px
  padding: 5px 10px 5px 10px

.goto__button:hover
  color: #fcbb54
  background-color: white
  border: 1px solid #fcbb54

.content
  width: 100%
  box-sizing: border-box

.container
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  width: 100%
  background-color: white
  box-sizing: border-box

.signin-description
  text-align: center

@media (max-width: 480px)
  .content
    position: absolute
    top: 0px
    bottom: 0px

  .calendar__name
    font-size: 18px

  .goto__button
    font-size: 12px

  .hero
    display: none

  .hero-sticky-header
    display: none

  .container
    height: 100%
    min-width: 0px

@media (max-width: 230px)
  .calendar__name
    font-size: 12px

  .content
    padding: 0px

  p
    line-height: normal

@media (max-height: 230px) and (max-width: 480px)
  .calendar
    flex-direction: row

  .calendar__section
    width: 50%
    border-bottom: none
    border-left: 1px solid #f7f7f7

  .cs--first
    border-left: none

@media (max-height: 480px)
  .help
    display: none

  .signin-description
    font-size: 0.8em
